<h1 class="admin_header">Payments</h1>

<%= render 'shared/messages' %>

<section class="admin_content">
  <ul class="admin_content_links">
    <li><%= link_to "Admin Home", admin_path %></li>
  </ul>

  <ol class="admin_content_list">
    <% @payments.each do |payment| %>
      <li>
        <div class="half-col left-col">
          <% if payment.user %>
            <b><%= payment.user.full_name %></b>
            <span><%= payment.user.email %></span>
          <% else %>
            <b>[deleted user]</b>
            <span></span>
          <% end %>

          <small><strong>date:</strong><%= payment.created_at %></small>
          <small><strong>ref ID:</strong><%= payment.reference_id %></small>
        </div><!--

        --><div class="half-col right-col">
          <b><%= number_to_currency(payment.amount / 100.0) %></b>
        </div>
      </li>
    <% end %>
  </ol>
</section>
